{
  "include": [
    "env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/routes/api.get-fee.jsx",
    "app/routes/api.get-settings.jsx",
    "app/routes/api.set-fee.jsx",
    "app/routes/api/set-settings.jsx"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "baseUrl": ".",
    "types": ["node"]
  }
}
